@model Teacher
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Teacher</title>
    <link rel="stylesheet" href="~/css/teacheradd.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container">
        <h2>Edit Teacher</h2>
        <form method="post" enctype="multipart/form-data" class="student-form">
            <input asp-for="ImageUrl" hidden />
            <div class="form-section">
                <!-- Student Details -->
                <div class="form-group">
                    <label for="name">First Name *</label>
                    <input asp-for="FirstName" id="name" required>
                </div>
                <div class="form-group">
                    <label for="name">Last Name *</label>
                    <input asp-for="LastName" id="name" required>
                </div>
                <div class="form-group">
                    <label for="name">Email *</label>
                    <input asp-for="Email" type="email" id="name" required>
                </div>
                <div class="form-group">
                    <label for="name">Phone *</label>
                    <input asp-for="Phone" id="name" required>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address *</label>
                    <input asp-for="Address" id="name">
                </div>
                <div class="form-group">
                    <label for="gender">Gender *</label>
                    <select asp-for="Gender" id="gender" required>
                        <option value="" disabled selected>Please Select Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="class">Department *</label>
                    <select asp-for="DepartmentId" asp-items="@ViewData["DepartmentList"] as IEnumerable<SelectListItem>" id="department" required>
                        <option value="" disabled selected>Please Select Department</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="dob">Date of Birth *</label>
                    <input asp-for="BirthDate" type="date" id="dob" required>
                </div>
                <div class="form-group">
                    <label for="admission-date">Admission Date *</label>
                    <input asp-for="CreatedDate" type="date" id="admission-date" required>
                </div>
            </div>
            <!-- Upload Photo -->
            <div class="form-group photo-upload">
                <label for="photo">Upload Student Photo (150px x 150px)</label>
                <input asp-for="ImageUrl" type="file" name="file" id="photo" />
            </div>
            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-success">Save</button>
                <button type="reset" class="reset-btn">Reset</button>
            </div>
        </form>
    </div>
</body>
</html>
