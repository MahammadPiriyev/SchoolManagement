@using School.Entities
@model List<Teacher>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/teacher.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="main">
        <div class="container">
            <div class="table-actions">
                <input type="text" id="search-bar" placeholder="Search by name..." />
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Department</th>
                        <th>CreatedDate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacher in Model)
                    {
                        <tr onclick="window.location='@Url.Action("Info", "Teacher", new { id = teacher.Id, area = "Admin" })'" style="cursor: pointer;">
                            <td>@teacher.FirstName</td>
                            <td>@teacher.LastName</td>
                            <td>@teacher.Email</td>
                            <td>@teacher.Phone</td>
                            <td>@teacher.Address</td>
                            <td>@teacher.Department.Name</td>
                            <td>@teacher.CreatedDate</td>
                            <td><a asp-area="Admin" asp-controller="Teacher" asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i></a></td>
                            <td><a asp-area="Admin" asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger"><i class="fa-solid fa-trash" style="color: #ffffff;"></i></a></td>
                        </tr>
                    }
                <tbody>
            </table>
        </div>
    </div>
    <script src="~/js/searchbar.js"></script>

</body>
</html>

