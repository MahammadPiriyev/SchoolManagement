@using School.Entities
@model List<Teacher>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/student.css" rel="stylesheet" />
    <link href="~/css/dashboard.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="main">
        <div class="container">
            <h2>Teacher List</h2>
            <div class="table-actions">
                <input type="text" placeholder="Search by name..." />
                <div class="custom-select">
                    <select>
                        <option value="">Select an option</option>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                        <option value="4">Option 4</option>
                    </select>
                </div>
                <a class="btn btn-success">Search</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Department</th>
                        <th>CreatedDate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Email</td>
                            <td>@student.Phone</td>
                            <td>@student.Address</td>
                            <td>@student.Department</td>
                            <td>@student.CreatedDate</td>
                            <td><a asp-area="Admin" asp-controller="Teacher" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-outline-warning">Update</a></td>
                            <td><a asp-area="Admin" asp-controller="Teacher" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-outline-danger">Delete</a></td>
                        </tr>
                    }

                <tbody>
            </table>
        </div>
    </div>

</body>
</html>

