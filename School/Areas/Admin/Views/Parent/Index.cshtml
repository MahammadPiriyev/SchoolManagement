@using School.Entities
@model List<Parent>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/student.css" rel="stylesheet" />
    <link href="~/css/dashboard.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="main">
        <div class="container">
            <form method="get" action="/Admin/Parent/Index">
                <div class="table-actions">
                    <input type="text" id="search-bar" placeholder="Search by name..." />
                </div>
            </form>
            <table class="table">
                <thead>
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var parent in Model)
                    {
                        <tr onclick="window.location='@Url.Action("Info", "Parent", new { id = parent.Id, area = "Admin" })'" style="cursor: pointer;">
                            <td>@parent.FirstName</td>
                            <td>@parent.LastName</td>
                            <td>@parent.Email</td>
                            <td>@parent.Phone</td>
                            <td><a asp-area="Admin" asp-controller="Parent" asp-action="Edit" asp-route-id="@parent.Id" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i></a></td>
                            <td><a asp-area="Admin" asp-controller="Parent" asp-action="Delete" asp-route-id="@parent.Id" class="btn btn-danger"><i class="fa-solid fa-trash" style="color: #ffffff;"></i></a></td>
                        </tr>
                    }
                <tbody>
            </table>
        </div>
    </div>
    <script src="~/js/searchbar.js"></script>


</body>
</html>

