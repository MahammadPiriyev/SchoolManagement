@using School.Entities
@model List<Class>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/class.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="main">
        <div class="container">
            <h2>Class List</h2>
            <div class="table-actions">
                <input type="text" placeholder="Search by name..." />
                <div class="custom-select">
                    <select>
                        <option value="">Select an option</option>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                        <option value="4">Option 4</option>
                    </select>
                </div>
                <a class="btn btn-success">Search</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Class Name</th>
                        <th>Room Number</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr onclick="window.location='@Url.Action("Info", "Class", new { id = obj.ClassId, area = "Admin" })'" style="cursor: pointer;">
                            <td>@obj.ClassId</td>
                            <td>@obj.Name</td>
                            <td>@obj.RoomNumber</td>
                            <td>@obj.CreatedDate</td>
                            <td><a asp-area="Admin" asp-controller="Class" asp-action="Edit" asp-route-id="@obj.ClassId" class="btn btn-warning">Update</a></td>
                            <td><a asp-area="Admin" asp-controller="Class" asp-action="Delete" asp-route-id="@obj.ClassId" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }
                <tbody>
            </table>
        </div>
    </div>
</body>
</html>


